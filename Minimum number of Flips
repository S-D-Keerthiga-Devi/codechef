#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n,i,sum=0;
	cin>>t;
	while(t>0)
	{
	    cin>>n;
	    int a[n];
	    for(i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    for(i=0;i<n;i++)
	    {
	        sum+=a[i];
	    }
	    if(sum==0)
	    {
	        cout<<"0"<<endl;
	    }
	    else if(sum%2==0)
	    {
	        cout<<abs(sum/2)<<endl;
	    }
	    else
	    {
	        cout<<"-1"<<endl;
	    }
	    sum=0;
	    t--;
	}
	return 0;
}
