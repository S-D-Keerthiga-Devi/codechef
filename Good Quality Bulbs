#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n,x,i,sum=0;
	cin>>t;
	while(t>0)
	{
	    cin>>n>>x;
	    int a[n-1];
	    for(i=0;i<n-1;i++)
	    {
	        cin>>a[i];
	    }
	    for(i=0;i<n-1;i++)
	    {
	        sum+=a[i];
	    }
	    int z=(x*n)-sum;
	    if(z>0){
	        cout<<z<<endl;
	    }
	    else{
	        cout<<"0"<<endl;
	    }
	    sum=0;
	    t--;
	}
	return 0;
}
