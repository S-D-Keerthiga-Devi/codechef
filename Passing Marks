#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
	cin>>t;
	while(t>0)
	{
	    int n,x;
	    cin>>n>>x;
	    int a[n];
	    for(int i=0;i<n;i++) {
	        cin>>a[i];
	    }
	    sort(a,a+n);
	    int k = n-x;
	    cout<<a[k]-1<<endl;
	    t--;
	}
	return 0;
}
